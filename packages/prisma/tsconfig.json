{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "module": "nodenext",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true
  },
  "include": ["src/**/*" , "generated/**/*"]
}
