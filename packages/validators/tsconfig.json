{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "target": "es2022",
    "outDir": "dist",
    "module": "nodenext",
    "moduleResolution": "nodenext"
  },
  "include": ["src/**/*"]
}
